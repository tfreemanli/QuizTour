<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical"
    tools:context=".admin.CreateQuizActivity">

    <!-- Title Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-black"
            android:text="Update Quiz"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment2 MiniProject  Chengfeng Li #1602741" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_updatequiz_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Name"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_updatequiz_startdate"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:inputType="date"
            android:hint="Start Date"
            android:textAlignment="center"
            android:background="@drawable/border_bg" />

        <Button
            android:id="@+id/btn_updatequiz_startdatepick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="D"
            android:background="@drawable/border_bg"
            android:backgroundTint="@color/primary"
            android:padding="0dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/tv_updatequiz_enddate"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:inputType="date"
            android:background="@drawable/border_bg"
            android:hint="End Date"/>

        <Button
            android:id="@+id/btn_updatequiz_enddatepick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="D"
            android:padding="0dp"
            android:backgroundTint="@color/primary"
            android:background="@drawable/border_bg"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_updatequiz_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Category"/>
    <TextView
        android:id="@+id/tv_updatequiz_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Difficulty"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_updatequiz_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_updatequiz_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/primary"
            android:onClick="update"/>
        <Button
            android:id="@+id/btn_updatequiz_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/third"
            android:onClick="cancel"/>
        <Button
            android:id="@+id/btn_updatequiz_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/danger"
            android:onClick="delete"/>
    </LinearLayout>

</LinearLayout>